    <div class="upgrades-card">
        <h2>Delorean Upgrades</h2>
        <div class="upgrades-images">
            <div>
                <div class="img-box">
                    <img src="../images/upgrades/flux-cap.png" alt="Flux Capacitor">
                </div>
                <div class="link-box">
                    <a href="/">
                        <span>Flux Capacitor</span>
                    </a>
                </div>
            </div>

            <div>
                <div class="img-box">
                    <img src="../images/upgrades/flame.jpg" alt="Flame Decals">
                </div>
                <div class="link-box">
                    <a href="/">
                        <span>Flame Decals</span>
                    </a>
                </div>
            </div>

            <div>
                <div class="img-box">
                    <img src="../images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers">
                </div>
                <div class="link-box">
                    <a href="/">
                        <span>Bumper Stickers</span>
                    </a>
                </div>
            </div>

            <div>
                <div class="img-box">
                    <img src="../images/upgrades/hub-cap.jpg" alt="Hub Caps">
                </div>
                <div class="link-box">
                    <a href="/">
                        <span>Hub Caps</span>
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
