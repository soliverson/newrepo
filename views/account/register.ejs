<% if (title) { %>
    <h1 class="form-title">
        <%= title %>
    </h1>
<% } else { %>
    <h1 class="form-title">Register</h1>
<% } %>

<!-- Display flash messages -->
<%- messages() %>

<!-- Display validation errors -->
<% if (errors && errors.length > 0) { %>
    <ul class="notice">
        <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<!-- Registration Form -->
<form action="/account/register" method="POST" class="form-container registration-form">
    <h2 class="registration-heading">All fields are required*</h2>

    <!-- First Name Field -->
    <div class="form-group registration-form-group">
        <label for="account_firstname" class="registration-label">First Name</label>
        <input type="text" id="accountFirstname" name="account_firstname" class="form-input" required value="<%= account_firstname || locals.account_firstname %>">
    </div>

    <!-- Last Name Field -->
    <div class="form-group registration-form-group">
        <label for="account_lastname" class="registration-label">Last Name</label>
        <input type="text" id="accountLastname" name="account_lastname" class="form-input" required value="<%= account_lastname || locals.account_lastname %>">
    </div>

    <!-- Email Field -->
    <div class="form-group registration-form-group">
        <label for="account_email" class="registration-label">Email</label>
        <input type="email" id="accountEmail" name="account_email" placeholder="Enter a valid email address" class="form-input" required value="<%= account_email || locals.account_email %>">
    </div>

    <!-- Password Field with Validation -->
    <div class="form-group registration-form-group">
        <label for="account_password" class="registration-label">Password</label>
        <input type="password" id="account_password" name="account_password" class="form-input" required minlength="12"
            pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*()_+=-]).{12,}$" 
            title="Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character (!@#$%^&*()_+=-)">
    </div>

    <label>
        <input type="checkbox" id="togglePassword"> Show Password
    </label>
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special character.</span>

    <!-- Submit Button -->
    <button type="submit" class="form-button registration-btn">Register</button>
</form>

<script src="/js/script.js"></script>
